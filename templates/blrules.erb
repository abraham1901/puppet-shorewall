###############################################################################
<% if @whitelists -%>
<% @whitelists.each do |value| -%>
WHITELIST       <%= value %>
<% end -%>
<% end -%>
<% if @drops -%>
<% @drops.each do |value| -%>
REJECT <%= value %>
<% end -%>
<% end -%>
